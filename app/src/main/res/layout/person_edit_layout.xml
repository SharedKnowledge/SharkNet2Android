<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:useDefaultMargins="true"
    android:orientation="horizontal">
    >

    <!-- 0: user id -->
    <TextView
        android:id="@+id/personEditValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="@dimen/textSizeGoodReadable"
        android:text="value" />

    <TextView
        android:id="@+id/personEditExplain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:textSize="@dimen/textSizeGoodReadable"
        android:text="press for details" />

    <!-- 1: user id -->
    <Button
        android:id="@+id/userIDTextViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:onClick="onExplainUserIDClick"
        android:text="@string/userID" />

    <TextView
        android:id="@+id/personEditUserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="_setDuringStart_" />

    <!-- 2: user name -->
    <Button
        android:id="@+id/userNameTextViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:onClick="onExplainUserNameClick"
        android:text="@string/userName" />

    <EditText
        android:id="@+id/personName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:text="_setDuringStart_" />

    <!-- 3: identity assurance -->
    <Button
        android:id="@+id/identityAssuranceDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:onClick="onExplainIdentityAssuranceClick"
        android:text="@string/identityAssurance" />

    <TextView
        android:id="@+id/personEditIdentityAssuranceLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="_setDuringStart_" />

    <!-- 4: signing failure -->
    <Button
        android:id="@+id/signingFailureDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:onClick="onExplainSigningFailureClick"
        android:text="@string/signingFailure" />

    <Spinner
        android:id="@+id/signingFailureValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        />

    <!-- 4: certificated subject -->
    <Button
        android:id="@+id/certificatedSubjectDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:onClick="onExplainWasCertifiedClick"
        android:text="@string/wasCertifiedDescriptionText"
        />

    <Button
        android:id="@+id/certificatedSubjectShowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:onClick="onShowOwnCertificatesClick"
        android:text="@string/show"
        />

    <!-- 6: issued certificates -->
    <Button
        android:id="@+id/issuerCertificateDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="1"
        android:onClick="onExplainCertifiedClick"
        android:text="@string/certificatedDescriptionText"
        />

    <Button
        android:id="@+id/issuerCertificateShowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:onClick="onShowSignedCertificatesClick"
        android:text="@string/show"
        />

    <!-- 7: save / abort -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="1"
        android:onClick="onSaveClick"
        android:text="@string/save" />

    <Button
        android:id="@+id/abortButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="0"
        android:onClick="onAbortClick"
        android:text="@string/abort" />

</GridLayout>
