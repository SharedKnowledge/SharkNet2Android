    <TextView
        android:id="@+id/fragment_network_bluetooth_scan_text"
        android:text="@string/network_bluetooth_scan_title"
        android:layout_gravity="left|top" />

    <ToggleButton
        android:id="@+id/fragment_network_bluetooth_scan_button"
        android:text="Scan Neighbourhood"
        android:layout_gravity="left|top" />

    <TextView
        android:id="@+id/fragment_network_bluetooth_connect_hubs_text"
        android:text="@string/network_connect_hubs_title"
        android:layout_gravity="left|top" />

    <ToggleButton
        android:id="@+id/fragment_network_bluetooth_connect_hubs_button"
        android:text="Hubs on | off"
        android:layout_gravity="left|top" />

    <TextView
        android:id="@+id/fragment_network_bluetooth_configure_hubs_text"
        android:text="@string/network_configure_hubs_title"
        android:layout_gravity="left|top"
        android:onClick="onConfigASAPHubs"
        />

    <Button
        android:id="@+id/fragment_network_bluetooth_configure_hubs_button"
        android:text="@string/network_configure_hubs_button"
        android:onClick="onConfigASAPHubs"
        android:layout_gravity="left|top" />
</GridLayout>

