<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.network.NetworkFragment">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/fragment_network_bluetooth_on_off_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bluetoothToggleExplanationText"
            android:textSize="16sp"
            app:layout_column="0"
            app:layout_row="1" />

        <ToggleButton
            android:id="@+id/fragment_network_bluetooth_on_off_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Bluetooth" />

        <TextView
            android:id="@+id/fragment_network_bluetooth_scan_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settingsBluetoothD_And_D_Explanation"
            android:textSize="16sp"
            app:layout_column="0"
            app:layout_row="2" />

        <ToggleButton
            android:id="@+id/fragment_network_bluetooth_scan_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Scan Neighbourhood" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Hubs:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:id="@+id/fragment_network_bluetooth_connect_hubs_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settingsASAPHubsExplanation"
            android:textSize="16sp"
            app:layout_column="0"
            app:layout_row="4" />

        <ToggleButton
            android:id="@+id/fragment_network_bluetooth_connect_hubs_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Hubs on | off" />

        <TextView
            android:id="@+id/fragment_network_bluetooth_configure_hubs_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settingsConfigASAPHubsExplanation"
            android:textSize="16sp"
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:id="@+id/fragment_network_bluetooth_configure_hubs_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/configHubsButtonText" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="0" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>