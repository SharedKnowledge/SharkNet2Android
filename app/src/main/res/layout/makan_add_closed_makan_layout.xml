<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/identityShowPersonListExplanation"
        android:text="@string/identityShowPersonListExplanationText"
        android:layout_gravity="left|top" />

    <Button
        android:id="@+id/identityShowPersonList"
        android:text="List Persons"
        android:onClick="onShowPersonListClick"
        android:layout_gravity="left|top"
        />

    <TextView
        android:id="@+id/makanAddMakanNameExplanation"
        android:text="@string/makanAddMakanNameExplanationText"
        android:layout_gravity="left|top" />

    <EditText
        android:id="@+id/makanAddMakanName"
        android:inputType="text"
        android:text="channelName"
        android:layout_gravity="left|top" />

    <Button
        android:id="@+id/makanAddMakanDoAdd"
        android:text="Add"
        android:onClick="onClick"
        android:layout_gravity="left|top"
        />

    <Button
        android:id="@+id/makanAddMakanExit"
        android:text="Exit"
        android:layout_gravity="left|top"
        />

</GridLayout>
