<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- line 1 -->
    <TextView
        android:id="@+id/fragment_add_message_channel_name"
        android:layout_width="258dp"
        android:layout_height="26dp"
        android:text="no ownerName"
        />

    <!-- line 2 -->
    <EditText
        android:id="@+id/fragment_add_message_message_input"
        android:layout_width="258dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textMultiLine"
        />

    <!-- recipients -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_add_message_recipients_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="recipients: "
            />

        <TextView
            android:id="@+id/fragment_add_message_message_recipients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="anybody"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_add_message_select_recipients_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSelectRecipients"
            android:text="Select"
            />

        <Button
            android:id="@+id/fragment_add_message_select_anybody_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRemoveRecipients"
            android:text="to anybody"
            />
    </LinearLayout>

    <!-- line : encryption -->
    <!-- https://developer.android.com/guide/topics/ui/controls/checkbox -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_add_message_end_to_end_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E2E security: "
            />

        <CheckBox
            android:id="@+id/fragment_add_message_signed_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:text="sign" />

        <CheckBox
            android:id="@+id/fragment_add_message_encrypted_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:onClick="onEncryptedClick"
            android:text="encrypt" />
    </LinearLayout>


    <!-- comments -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_add_message_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />

    </LinearLayout>

    <!-- line last -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_add_message_send_message_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSendClick"
            android:text="@string/send"
            />

        <Button
            android:id="@+id/fragment_receive_credentials_abort_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onAbortClick"
            android:text="@string/abort"
            />

    </LinearLayout>


</LinearLayout>