<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:useDefaultMargins="true"
    android:orientation="horizontal">
    >

<TextView
    android:id="@+id/exchangeCredentialsExplanation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="0"
    android:layout_column="0"
    android:textSize="@dimen/textSizeGoodReadable"
    android:text="@string/exchangeCredentialsExplanationDescription" />

<Button
    android:id="@+id/sendCredentialsButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_row="1"
    android:layout_column="0"
    android:onClick="onSendCredentialsClick"
    android:text="@string/sendCredentialsButtonText"/>

<Button
    android:id="@+id/receiveCredentialsButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_row="2"
    android:layout_column="0"
    android:onClick="onReceiveCredentialsClick"
    android:text="@string/receiveCredentialsButtonText" />
</GridLayout>
