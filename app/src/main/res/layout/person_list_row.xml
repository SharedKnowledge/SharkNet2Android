<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical">

    <TextView
        android:id="@+id/person_list_row_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/personName"
        android:textSize="16dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/person_list_row_trustlevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/person_list_row_name"
        android:textColor="@color/personTrustLevel"
        />

    <TextView
        android:id="@+id/person_list_row_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/person_list_row_trustlevel"
        android:textColor="@color/personTrustLevel"
        />
</RelativeLayout>