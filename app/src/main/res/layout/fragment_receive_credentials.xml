<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_receive_credentials"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contacts.receiveCredentials.ReceiveCredentialsFragment">

    <TextView
        android:id="@+id/fragment_receive_credentials_explanation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/personWaitForCredentialText"
        android:textSize="@dimen/textSizeGoodReadable"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/fragment_receive_credentials_cic_explanation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/credentialCicReceiver"
        android:textSize="@dimen/textSizeGoodReadableSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_receive_credentials_explanation_text"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/fragment_receive_credentials_abort_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/global_abort"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_receive_credentials_cic_explanation_text"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>