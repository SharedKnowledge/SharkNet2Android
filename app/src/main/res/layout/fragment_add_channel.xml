<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/fragment_add_channel_channel_uri_explanation"
        android:text="@string/snMessageURIExplanationText"
        android:layout_gravity="start|top" />

    <TextView
        android:id="@+id/fragment_add_channel_channel_uri"
        android:inputType="text"
        android:text="sn2://ChannelURI"
        android:layout_gravity="start|top"
        />

    <TextView
        android:id="@+id/fragment_add_channel_add_name_explanation"
        android:text="@string/snMessagerChannelNameExplanationText"
        android:layout_gravity="start|top" />

    <EditText
        android:id="@+id/fragment_add_channel_add_name_input_field"
        android:inputType="text"
        android:text="@string/fragment_add_channel_add_name_input"
        android:layout_gravity="start|top" />

    <Button
        android:id="@+id/fragment_add_channel_add_button"
        android:text="@string/add"
        android:onClick="onClick"
        android:layout_gravity="start|top"
        />

    <Button
        android:id="@+id/fragment_add_channel_exit_button"
        android:text="@string/exit"
        android:layout_gravity="start|top"
        />

</GridLayout>
