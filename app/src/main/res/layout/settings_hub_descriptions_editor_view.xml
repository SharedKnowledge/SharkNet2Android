<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/settingsTCPHubDescriptionHostNameExplanation"
        android:text="@string/hostNameText"
        android:layout_gravity="left|top" />

    <EditText
        android:id="@+id/settingsTCPHubDescriptionHostName"
        android:inputType="text"
        android:text="hostname"
        android:layout_gravity="left|top"
        />

    <TextView
        android:id="@+id/settingsTCPHubDescriptionPortExplanation"
        android:text="@string/settingsTCPHubDescriptionPortExplanationText"
        android:layout_gravity="left|top" />

    <EditText
        android:id="@+id/settingsTCPHubDescriptionPort"
        android:inputType="numberDecimal"
        android:layout_gravity="left|top" />

    <TextView
        android:id="@+id/settingsTCPHubDescriptionMultiChannelExplanation"
        android:text="@string/settingsTCPHubDescriptionMultiChannelExplanationText"
        android:layout_gravity="left|top" />

    <ToggleButton
        android:id="@+id/settingsTCPHubDescriptionMultiChannel"
        android:text="on | off"
        android:layout_gravity="left|top" />

    <Button
        android:id="@+id/save"
        android:text="Save"
        android:onClick="onClick"
        android:layout_gravity="left|top"
        />

    <Button
        android:id="@+id/abortButton"
        android:text="Abort"
        android:layout_gravity="left|top"
        android:onClick="onAbortClick"
        />
</GridLayout>
